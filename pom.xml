        </contributor>
    </contributors>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/prasanna0586/spring-data-dynamodb/issues</url>
    </issueManagement>

    <ciManagement>
        <system>GitHub Actions</system>
        <url>https://github.com/prasanna0586/spring-data-dynamodb/actions</url>
    </ciManagement>
</project>
